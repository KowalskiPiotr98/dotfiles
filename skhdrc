cmd + alt + ctrl - q : yabai -m config layout bsp

ctrl - q : yabai -m window --close
ctrl - f : yabai -m window --toggle native-fullscreen || yabai -m window --toggle zoom-fullscreen

ctrl - h : yabai -m window --focus west || yabai -m window --focus stack.prev || yabai -m window --focus stack.last
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - l : yabai -m window --focus east || yabai -m window --focus stack.next || yabai -m window --focus stack.first

alt + ctrl - h : yabai -m window --warp west
alt + ctrl - j : yabai -m window --warp south
alt + ctrl - k : yabai -m window --warp north
alt + ctrl - l : yabai -m window --warp east

alt + cmd - h : yabai -m window --swap west
alt + cmd - j : yabai -m window --swap south
alt + cmd - k : yabai -m window --swap north
alt + cmd - l : yabai -m window --swap east

alt + cmd - c : pbcopy < /dev/null
